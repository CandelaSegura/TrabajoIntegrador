<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
    <!-- Header -->
    <% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado')  %>
	<% } else { %>
		<%- include('./partials/headerDeslogueado')  %>
	<% } %>
    <!-- /Header -->

    <!-- Novedades -->
    <div class="container products-wrapper">
        <div class="row">
            
            <!-- Show the "ultimos" products -->
            <% if (productos.length > 0) { %>
                <div class="col-12">
                    <h2 class="products-title"><%=existe%></h2>
                </div>
                <% for (let i = 0; i < productos.length; i++) { %>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <section class="product-box">
                            <a href="/product/id/<%= productos[i].id %>">
                                <figure class="product-box_image">
                                    <img src="<%= productos[i].imagen_producto %>" alt="<%= productos[i].nombre_producto%>">
                                </figure>
                                <article class="product-box_data">
                                    <h2><%= productos[i].nombre_producto%></h2>
                                    <p><%= productos[i].descripcion_producto%></p>
                                    <p>Comentarios: <%= productos[i].tabla_comentarios.length %></p>
                                </article>
                            </a>
                        </section>
                    </div>
                <% } %>
            <% } else { %>
                <div class="col-12">
                    <h2 class="products-title"><%=existe%></h2>
                </div>
            <% } %>

        </div>
    </div>

    <!-- footer -->
    <%- include('./partials/footer') %>
    <!-- /footer -->
</body>

</html>