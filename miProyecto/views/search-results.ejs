<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
    <!-- Header -->
    <%- include('./partials/headerDeslogueado') %>
    <!-- /Header -->

    <!-- Novedades -->
    <div class="container products-wrapper">
        <div class="row">
            <div class="col-12">
                <h2 class="products-title"><%= mensaje %></h2>
            </div>
            <!-- Show the "ultimos" products -->
            <% if (listado.length > 0) { %>
                <% for (let i = 0; i < listado.length; i++) { %>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <section class="product-box">
                            <a href="/product/id/<%= listado[i].id %>">
                                <figure class="product-box_image">
                                    <img src="<%= listado[i].imagen %>" alt="<%= listado[i].nombre %>">
                                </figure>
                                <article class="product-box_data">
                                    <h2><%= listado[i].nombre %></h2>
                                    <p><%= listado[i].descripcion %></p>
                                    <p>Comentarios: <%= listado[i].comentarios.length %></p>
                                </article>
                            </a>
                        </section>
                    </div>
                <% } %>
            <% } else { %>
                <div class="col-12">
                    <h2>No hay resultados para su b√∫squeda</h2>
                </div>
            <% } %>

        </div>
    </div>

    <!-- footer -->
    <%- include('./partials/footer') %>
    <!-- /footer -->
</body>

</html>