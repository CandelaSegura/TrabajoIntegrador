<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<%- include('./partials/headerDeslogueado') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title"><%= mensaje %></h2>
			</div>
			<!-- Show the "ultimos" products -->
			<%for (let i = 0; i < resultado.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/id/<%= resultado[i].id %>">
							<figure class="product-box_image">
								<img src="<%=resultado[i].imagen%>" alt="<%= resultado[i].nombre %>">
							</figure>
							<article class="product-box_data">
								<h2><%= resultado[i].nombre %></h2>
								<p><%= resultado[i].descripcion %></p>
								<p>Comentarios: <%=resultado[i].comentarios.length%></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>