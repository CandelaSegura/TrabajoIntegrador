<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
	<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<%- include('./partials/headerDeslogueado') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner">
		<img src="images/banner.png" alt="Banner de ofertas">
	</div>
	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Novedades</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<%for (let i = 0; i < db.productos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/id/<%= db.productos[i].id %>">
							<figure class="product-box_image">
								<img src="<%= db.productos[i].imagen %>" alt="<%= db.productos[i].nombre %>">
							</figure>
							<article class="product-box_data">
								<h2><%= db.productos[i].nombre %></h2>
								<p><%= db.productos[i].descripcion %></p>
								<p>Comentarios: <%=db.productos[i].comentarios.length%></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Más comentados</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<%for (let i = 0; i < 4; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/id/<%= db.productos[i].id %>">
							<figure class="product-box_image">
								<img src="<%= db.productos[i].imagen %>" alt="<%= db.productos[i].nombre %>">
							</figure>
							<article class="product-box_data">
								<h2><%= db.productos[i].nombre %></h2>
								<p><%= db.productos[i].descripcion %></p>
								<p>Comentarios: <%=db.productos[i].comentarios.length%></p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
		</div>
	</div>
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>	
</html>