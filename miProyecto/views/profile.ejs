<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<%- include('./partials/headerLogueado') %>
	<!-- /Header -->

	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="<%=user.foto_perfil%>" alt="foto_perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%=user.usuario%> 
						<a href="/user/profile-edit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li><%= user.tabla_productos.length%> Productos </li>
						<li>200 seguidores</li>
						<li>300 comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<%for (let i = 0; i < user.tabla_productos.length; i++) { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product/id/<%= user.tabla_productos[i].id %>">
							<figure class="product-box_image">
								<img src="<%= user.tabla_productos[i].imagen_producto%>" alt="<%= user.tabla_productos[i].nombre_producto%>">
							</figure>
							<article class="product-box_data">
								<h2><%= user.tabla_productos[i].nombre_producto %></h2>
								<p><%= user.tabla_productos[i].descripcion_producto %></p>
								<p>Comentarios:</p>
							</article>
						</a>
					</section>
				</div>
			<% } %>
			<!-- Show mis productos -->
			</div>
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('./partials/footer') %>>
	<!-- /footer -->
</body>	
</html>