<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	<!-- Header -->
	<%- include('./partials/headerDeslogueado') %>
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%=detalleProducto[0].nombre%></h2> 
			<p class="product-detail-description">
				<a href="/product/add">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%=detalleProducto[0].imagen%>" alt="<%=detalleProducto[0].nombre%>" class="product-detail-img">
					<p class="product-detail-description"><%=detalleProducto[0].descripcion%></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<h2>Comentarios:</h2>
						<%for (let i = 0; i < comentarios.length; i++) { %> 
							<article>
							<img src="<%=comentarios[i].fotoDePerfil%>" alt="">
							<div class="data">
								<p class="user">
								<strong> <a href="/user/profile"><%=comentarios[i].usuario%></a> </strong>
								<br><%=comentarios[i].texto%></p>
							</div>
						</article>
						<% } %>
					</section>
					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->

</body>	
</html>