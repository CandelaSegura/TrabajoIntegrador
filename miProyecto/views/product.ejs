<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>
<body>
	<!-- Header -->
	<%- include('./partials/headerDeslogueado') %>
	<!-- /Header -->

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-center">
			<h2 class="products-title"><%=productos.nombre_producto%></h2> 
			<p class="product-detail-description">
				<a href="/product/add">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="<%=productos.imagen_producto%>" alt="<%=productos.nombre_producto%>" class="product-detail-img">
					<p class="product-detail-description">Publicado por: <a href="/user/profile/id/<%= productos.id_usuario%>"><%=productos.tabla_usuario.usuario%></a></p>
					<p class="product-detail-description"><%=productos.descripcion_producto%></p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<h2>Comentarios:</h2>
						<%for (let i = 0; i <productos.tabla_comentarios; i++) { %> 
							<article>
							<img src="<%=productos.tabla_comentarios.tabla_usuario.foto_usuario.fot_perfil%>" alt="">
							<div class="data">
								<p class="user">
								<strong> <a href="/user/profile"><%=productos.tabla_comentarios[i].tabla_usuario%></a> </strong>
								<br><%=comentarios.texto_comentario%></p>
							</div>
						</article>
						<% } %>
					</section>
					<form class="form" action="" method="POST">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->

</body>	
</html>