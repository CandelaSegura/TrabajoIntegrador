<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<% if (locals.user != undefined) { %>
		<%- include('./partials/headerLogueado')  %>
	<% } else { %>
		<%- include('./partials/headerDeslogueado')  %>
	<% } %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Editar mi perfil</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<form class="formulario" action="/user/profile/edit/id/<%= usuario.id %>" method="post">
				
				<div class="pregunta">
				<label class="vacioForm" for="email">Modificar Email:</label>
				<input class="completarForm" type="email" id="email" name="email" placeholder="Original: <%=user.email%>"><br>
				<% if (locals.errors && errors.email) { %>
					<div class="error-msg"><%= errors.email.msg %></div>
					<% } %>
				</div>



				<div class="pregunta">
				<label class="vacioForm" for="usuario">Modificar Usuario:</label>
				<input class="completarForm" type="text" id="usuario" name="usuario" placeholder="Original: <%=user.usuario%>"><br>
				<% if (locals.errors && errors.usuario) { %>
					<div class="error-msg"><%= errors.usuario.msg %></div>
					<% } %>
				</div>

				<div class="pregunta">
				<label class="vacioForm" for="contraseña">Modificar Contraseña:</label>
				<input class="completarForm" type="password" id="contrasena" name="contrasena"><br>
				<% if (locals.errors && errors.contrasena) { %>
					<div class="error-msg"><%= errors.contrasena.msg %></div>
					<% } %>
				</div>

				<div class="pregunta">
				<label class="vacioForm" for="fecha_nacimiento">Modificar Fecha de Nacimiento:</label>
				<input class="completarForm" type="date" id="fecha_nacimiento" name="fecha_nacimiento" placeholder="Original: <%=user.fecha%>"><br>
				</div>

				<div class="pregunta">
				<label class="vacioForm" for="nro_documento">Modificar Nro de Documento:</label>
				<input class="completarForm" type="number" id="nro_documento" name="nro_documento" placeholder="Original: <%=user.dni%>"><br>
				</div>

				<div class="pregunta">
				<label class="vacioForm" for="foto_perfil">Modificar Foto de Perfil:</label>
				<input class="completarForm" type="text" id="foto_perfil" name="foto_perfil" placeholder="Original: <%=user.foto_perfil%>"><br>
				</div>

				<button class="boton" type="submit">Guardar cambios</button>
			</form>
		</div>
	</div>

	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>