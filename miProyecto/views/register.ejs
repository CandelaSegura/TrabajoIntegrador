<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

<body>
	<!-- Header -->
	<%- include('./partials/headerDeslogueado') %>
	<!-- /Header -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<form class="formulario" action="/user/register" method="POST" novalidate>
			<div class="pregunta">
				<label class="vacioForm" for="email">Email:</label>
				<input type="email" class="completarForm" id="email" name="email" placeholder="email" value="<%= locals.oldData && oldData.email ? oldData.email : null %>">
				<% if (locals.errors && errors.email) { %>
                            <div class = "error-msg" > <%= errors.email.msg %> </div>
                        <% } %>
			</div>

			<div class="pregunta">
				<label class="vacioForm" for="usuario">Usuario:</label>
				<input class="completarForm" type="text" id="usuario" name="usuario">
				<% if (locals.errors && errors.usuario) { %>
					<div class = "error-msg" > <%= errors.usuario.msg %> </div>
				<% } %>
			</div>

			<div class="pregunta">
				<label class="vacioForm" for="contraseña">Contraseña:</label>
				<input class="completarForm" type="password" id="contraseña" name="contrasena">
				<% if (locals.errors && errors.contrasena) { %>
					<div class = "error-msg" > <%= errors.contrasena.msg %> </div>
				<% } %>
			</div>

			<div class="pregunta">
				<label class="vacioForm" for="fecha_nacimiento">Fecha de Nacimiento:</label>
				<input class="completarForm" type="date" id="fecha_nacimiento" name="fecha"><br>
			</div>

			<div class="pregunta">
				<label class="vacioForm" for="nro_documento">Nro de Documento:</label>
				<input class="completarForm" type="number" id="nro_documento" name="dni"><br>
			</div>

			<div class="pregunta">
				<label class="vacioForm" for="foto_perfil">Foto de Perfil:</label>
				<input class="completarForm" type="text" id="foto_perfil" name="foto_perfil"><br>
			</div>
				
				<br><button class="boton" type="submit">Registrar</button></br>
			
			  </form> 

			</div>
		</div>


	<!-- footer -->
	<%- include('./partials/footer') %>
	<!-- /footer -->
</body>

</html>